# Your desired log level for the application
#! Options: default, debug, info, warn, error, critical
REFLEX_LOGLEVEL=default


# The port on which the frontend will run
REFLEX_FRONTEND_PORT=3000
# The port on which the backend will run
REFLEX_BACKEND_PORT=8000

# The URL where the frontend will be deployed
REFLEX_DEPLOY_URL=https://DOMAIN.COM or https://SUB.DOMAIN.COM


# Spotify API credentials
SPOTIFY_CLIENT_ID=YOUR_SPOTIFY_CLIENT_ID
SPOTIFY_CLIENT_SECRET=YOUR_SPOTIFY_CLIENT_SECRET
SPOTIFY_REFRESH_TOKEN=YOUR_SPOTIFY_REFRESH_TOKEN

# GitHub API token for contribution calendar data
# Get your token from: https://github.com/settings/tokens
# Needs public_repo and read:user scope for reading contribution data
GITHUB_TOKEN=ghp_YOUR_GITHUB_TOKEN

# Your Discord user and guild IDs for fetching your avatar
DC_UID=YOUR_DISCORD_USER_ID
DC_GID=YOUR_DISCORD_GUILD_ID

# The Discord Token from a bot that you share a server with
DC_TOKEN=YOUR_DISCORD_BOT_TOKEN